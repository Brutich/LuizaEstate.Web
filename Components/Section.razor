<MudStack Class="pa-20" AlignItems="AlignItems.Center">
    @if (!string.IsNullOrWhiteSpace(Title))
    {
        <MudText Typo="Typo.h4">@Title</MudText>
    }

    @ChildContent

</MudStack>

@code{
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}